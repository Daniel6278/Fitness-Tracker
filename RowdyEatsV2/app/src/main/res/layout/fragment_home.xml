<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="272dp"
        android:layout_height="126dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/UTSALogo"
        android:src="@drawable/utsabirdlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMenu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu 1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtDropdown1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explanation for Menu 1"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnMenu1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Repeat for other buttons and dropdown texts -->

</androidx.constraintlayout.widget.ConstraintLayout>
