<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/is_edit_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.RowdyEats.BodySmall"
            android:textAlignment="center"
            android:layout_marginVertical="16dp"
            android:textColor="@color/gray_dark"></TextView>

        <EditText
            android:id="@+id/caloriesFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hintFood"
            android:singleLine="true" />

        <EditText
            android:id="@+id/caloriesNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Calories"
            android:inputType="number"
            android:singleLine="true" />

    </LinearLayout>
</RelativeLayout>