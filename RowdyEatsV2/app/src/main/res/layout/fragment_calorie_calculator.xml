<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/calorieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Your Daily Calories"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/orange_dark"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/heightSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Height:"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/blue" />

    <EditText
        android:id="@+id/feetInput"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="10dp"
        android:hint="Feet"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightSelect"
        app:layout_constraintWidth_percent="0.5" />

    <EditText
        android:id="@+id/inchesInput"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:hint="Inches"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightSelect"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/weightSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="Enter Weight:"
        app:layout_constraintEnd_toEndOf="@+id/heightSelect"
        app:layout_constraintStart_toStartOf="@+id/heightSelect"
        app:layout_constraintTop_toTopOf="@+id/heightSelect"
        android:textColor="@color/blue" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:hint="Weight (in pounds)"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/weightSelect"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/weightSelect"
        app:layout_constraintTop_toBottomOf="@+id/weightSelect" />

    <TextView
        android:id="@+id/ageSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="Enter Age:"
        app:layout_constraintEnd_toEndOf="@+id/weightInput"
        app:layout_constraintStart_toStartOf="@+id/weightInput"
        app:layout_constraintTop_toTopOf="@+id/weightInput"
        android:textColor="@color/blue" />

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:hint="Age"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/ageSelect"
        app:layout_constraintStart_toStartOf="@+id/ageSelect"
        app:layout_constraintEnd_toEndOf="@+id/ageSelect"/>

    <TextView
        android:id="@+id/genderSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Gender:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ageInput"
        app:layout_constraintStart_toStartOf="@id/ageInput"
        app:layout_constraintEnd_toEndOf="@id/ageInput"
        android:textColor="@color/blue" />

    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/genderSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/maleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_marginEnd="16dp"
            android:textColor="@color/gray_dark" />

        <RadioButton
            android:id="@+id/femaleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_marginEnd="16dp"
            android:textColor="@color/gray_dark" />
    </RadioGroup>

    <TextView
        android:id="@+id/activitySelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Activity Level:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/genderGroup"
        app:layout_constraintStart_toStartOf="@+id/genderGroup"
        app:layout_constraintEnd_toEndOf="@+id/genderGroup"
        android:textColor="@color/blue" />
    <!-- Activity Level RadioGroup -->
    <RadioGroup
        android:id="@+id/activityLevelGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/activitySelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/noExerciseButton"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Little or No Exercise"
            android:textColor="@color/gray_dark" />

        <RadioButton
            android:id="@+id/lightlyActiveButton"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Active 1-3 Times a Week"
            android:textColor="@color/gray_dark" />

        <RadioButton
            android:id="@+id/moderatelyActiveButton"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Active 3-5 Times a Week"
            android:textColor="@color/gray_dark" />

        <RadioButton
            android:id="@+id/veryActiveButton"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Active Every Day"
            android:textColor="@color/gray_dark" />

        <RadioButton
            android:id="@+id/extraActiveButton"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Active Multiple Times a Day"
            android:textColor="@color/gray_dark" />


        <!-- Add other RadioButton views for each activity level as shown above -->

    </RadioGroup>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:text="Calculate"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="167dp"
        android:layout_height="54dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.782"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
