<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor">
            @color/blue
        </item>

        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorTertiary">@color/gray_dark</item>
        <item name="colorAccent">@color/gray_light</item>
        <item name="backgroundTint">@color/blue</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/orange</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorHint">@color/gray</item>

        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.RowdyEats.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.RowdyEats.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.RowdyEats.DisplaySmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.RowdyEats.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.RowdyEats.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.RowdyEats.BodySmall</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.RowdyEats.H1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.RowdyEats.H2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.RowdyEats.H3</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.RowdyEats.H1</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.RowdyEats.H2</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.RowdyEats.H3</item>

        <!-- Bottom Sheet -->
        <item name="bottomSheetDragHandleStyle">@style/Widget.MaterialComponents.BottomSheet.DragHandle</item>

    </style>

    <!-- splash screen -->
    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo_transparent</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Typography -->
    <style name="TextAppearance.RowdyEats.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontWeight">200</item>
    </style>
    <style name="TextAppearance.RowdyEats.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontWeight">300</item>
    </style>
    <style name="TextAppearance.RowdyEats.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontWeight">300</item>
    </style>
    <style name="TextAppearance.RowdyEats.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.RowdyEats.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.RowdyEats.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.RowdyEats.H1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">500</item>
        <item name="lineHeight">@null</item>
    </style>
    <style name="TextAppearance.RowdyEats.H2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">600</item>
        <item name="lineHeight">@null</item>
    </style>
    <style name="TextAppearance.RowdyEats.H3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">700</item>
        <item name="lineHeight">@null</item>
    </style>

    <!-- Toolbar -->
    <style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorForeground">@color/white</item>
        <item name="android:iconTint">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>
    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="Widget.MaterialComponents.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">?colorOnSurface</item>
        <!--Alpha can be added optionally to achieve nice color blend-->
        <item name="android:alpha">0.3</item>
    </style>
</resources>